@model IEnumerable<ProjetodeBloco.Models.Comentario>

@{
    ViewBag.Title = "ListaComentarios";
    Layout = "~/Views/Shared/LayoutDeEntrada.cshtml";
}

<h2>Comentarios</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Texto)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Texto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <button class="btn-default" type="button" onclick="location.href =' @Url.Action("DeletarComentario", "Comentarios", new { id = item.CometarioId })'">Deletar</button>
            </td>
        </tr>
    }
    @Html.ActionLink("Voltar", "Feed", "Postagens")

</table>
