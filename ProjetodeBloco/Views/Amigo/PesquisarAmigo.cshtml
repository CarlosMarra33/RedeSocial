@model IEnumerable<ProjetodeBloco.Models.Usuario>

@{
    ViewBag.Title = "PesquisarAmigo";
    Layout = "~/Views/Shared/LayoutDeEntrada.cshtml";
}

<h2>PesquisarAmigo</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <div class="form-group">
            <div class="col-md-10">
                <input type="text" name="pesquisa">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" value="Buscar" class="btn btn-primary btn-group-lg" />
            </div>
        </div>
    </div>
}
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Senha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ConfirmaSenha)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DataDeNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Genero)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataDeNascimento)
            </td>
            <td>
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-1">
                        <button type="button" onclick="location.href='@Url.Action("EnviarSolicitacao", "Amigo" , new { id= item.UsuarioId})'" class="btn btn-primary btn-group-lg">Adicionar Amigo</button>
                    </div>
                </div>
            </td>
        </tr>
    }

</table>
